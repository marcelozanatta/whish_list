<!-- Page Heading -->

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="my-4">Produtos
            <small v-if="categorySelected !== undefined">{{categorySelected.text}}</small>
        </h3>

    </div>
    <div class="card-body">
        <div class="row justify-content-end mb-5 mr-1">
            <div class="input-group col-xl-4 col-lg-4 col-md-4 col-sm-5 col-11">
                <form>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fas fa-search"></i></span>
                        <input v-model="productNameSearch" type="text" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
                    </div>
                </form>
            </div>
        </div>


        <div class="row">

            <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 mb-4 custom-selected" v-for="(product, index) in products">
                <a href="javascript:void(0)" v-on:click="addItemToList(product)">
                    <div class="card h-100">
                        <img class="card-img-top" src="http://placehold.it/700x400" alt="">
                        <div class="card-body">
                            <h4 class="card-title">
                                {{product.name}}
                            </h4>
                            <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod odio, gravida pellentesque urna varius vitae.</p>
                            <p class="card-text">R$ {{ formatPrice(product.price) }}</p>

                        </div>
                    </div>
                </a>
            </div>

        </div>
    </div>
</div>



<!-- /.row -->

<% content_for :end_body do %>
    <script>
        Vue.component('card-products', {
            props: ['category_selected', 'products'],
            methods: {

            },

        })
    </script>

    <% end %>