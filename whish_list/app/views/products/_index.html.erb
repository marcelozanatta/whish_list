<!-- Page Heading -->

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h5 class="my-2">Produtos
            <small v-if="categorySelected !== undefined">{{categorySelected.text}}</small>
        </h5>

    </div>
    <div class="card-body">
        <div class="row justify-content-end mb-3">
            <div class="input-group col-xl-6 col-lg-6 col-md-4 col-sm-5 col-11">
            
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fas fa-search"></i></span>
                        </div>
                        <input v-model="productNameSearch" type="text" class="form-control" placeholder="">
                    </div>
            </div>
        </div>


        <div class="row">

            <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 mb-4 custom-selected" v-for="(product, index) in products">
                
                    <div class="card h-100">
                        <img class="card-img-top" src="http://placehold.it/700x400" alt="">
                        <div class="card-body">
                            <h4 class="card-title">
                                {{product.name}}
                            </h4>
                            <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod odio, gravida pellentesque urna varius vitae.</p>
                            <p class="card-text">R$ {{ formatPrice(product.price) }}</p>
                            <div></div>
                            <div class="row">
                                <div class="col-4"><button class="btn-circle" v-on:click="addItemList(product,index)">+</button></div>
                                <div class="col-4 text-center ">{{product.quantity}}</div>
                                <div class="col-4"><button class="btn-circle" v-on:click="removeItemList(product,index)">-</button></div>
                            </div>
                        </div>
                    </div>
                
            </div>

        </div>
    </div>
</div>



<!-- /.row -->

<% content_for :end_body do %>
    <script>
        Vue.component('card-products', {
            props: ['category_selected', 'products'],
            methods: {

            },

        })
    </script>

    <% end %>