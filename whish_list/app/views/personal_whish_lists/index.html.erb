<% content_for :head do %>
	<link href="assets/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<% end %>

<p id="notice"><%= notice %></p>

<h3>Minhas Listas</h3>

 <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
    <tr>
      <th>Nome</th>
      <th>Total Itens</th>
      <th>Valor Total</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @personal_whish_lists.each do |personal_whish_list| %>
      <tr>
        <td><%= personal_whish_list.name %></td>
        <td><%= personal_whish_list.total_products %></td>
        <td>R$ <%= personal_whish_list.total_value %></td>
        <td>
        <a class="mr-3" data-toggle="tooltip" data-placement="top" title="Editar Lista" href="<%=product_personal_whish_list_path(personal_whish_list.id)%>"> <i class="fas fa-clipboard-list"></i></a>
        <a class="mr-3" data-toggle="tooltip" data-placement="top" title="Editar dados da lista" href="<%=edit_personal_whish_list_path(personal_whish_list)%>"><i class="fas fa-edit"></i></a>
        <%= link_to(personal_whish_list, method: :delete, data: { confirm: 'Tem certeza que deseja deletar?' }) do %><i class="fas fa-trash-alt"></i> <%end%></td>
      </tr>
    <% end %>
        </tbody>
                </table>
              </div>
            </div>
          </div>

<br>

<%= link_to 'New Personal Whish List', new_personal_whish_list_path %>

<% content_for :end_body do %>
  <script src="assets/datatables/jquery.dataTables.min.js"></script>
  <script src="assets/datatables/dataTables.bootstrap4.min.js"></script>
<% end %>
  