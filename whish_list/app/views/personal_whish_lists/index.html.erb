<% content_for :head do %>
	<link href="assets/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<% end %>

<p id="notice"><%= notice %></p>

<h1>Minhas Listas</h1>

<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personal_whish_lists.each do |personal_whish_list| %>
      <tr>
        <td><%= personal_whish_list.name %></td>
        <td><%= link_to 'Ver', product_personal_whish_list_path(personal_whish_list.id) %></td>
        <td><%= link_to 'Editar', edit_personal_whish_list_path(personal_whish_list) %></td>
        <td><%= link_to 'Deletar', personal_whish_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Personal Whish List', new_personal_whish_list_path %>

<% content_for :end_body do %>
  <script src="assets/datatables/jquery.dataTables.min.js"></script>
  <script src="assets/datatables/dataTables.bootstrap4.min.js"></script>
<% end %>
  